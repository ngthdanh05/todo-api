{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
